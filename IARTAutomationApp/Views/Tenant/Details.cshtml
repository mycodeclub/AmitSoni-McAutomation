@model IARTAutomationApp.Models.CustomerMaster

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var EmployeGI = Model.EmployeeGIs.Where(em => em.EmployeeCode == Model.UserMaster.EmployeeCode).FirstOrDefault();
    var empName = string.Format(EmployeGI.Title + " " + EmployeGI.First_Name + " " + EmployeGI.Middle_Name + " " + EmployeGI.Surname);
}


<!-- Main content -->
<div class="content">
    <ol class="breadcrumb bc-colored bg-success m-b-3">
        <li class="breadcrumb-item"><a href="#">Super Admin</a></li>
        <li class="breadcrumb-item active">Tenant's Full Details</li>
    </ol>
    <div class="row">
        <div class="col-lg-3">
            <div class="card m-b-3">
                <div class="card-body">
                    <div class="box-body">
                        <strong>Contact Person </strong>
                        <p class="text-muted"> @Html.DisplayFor(model => EmployeGI.CustomerMaster.ContactPerson)</p>
                        <hr>
                        <strong>Organization Name </strong>
                        <p class="text-muted"> @Html.DisplayFor(model => EmployeGI.CustomerMaster.OrgName)</p>
                        <hr>
                        <strong> Organization Address  </strong>
                        <p class="text-muted"> @Html.DisplayFor(model => EmployeGI.CustomerMaster.Address)</p>
                        <hr>
                        <strong>Organization Phone Number</strong>
                        <p class="text-muted"> @Html.DisplayFor(model => EmployeGI.CustomerMaster.PhoneNumber)</p>
                        <hr>
                        <strong>Organization Email</strong>
                        <p class="text-muted"> @Html.DisplayFor(model => EmployeGI.CustomerMaster.Email)</p>
                        <hr>
                        @*<strong>Tenant Name</strong>
                            <p class="text-muted"> @empName</p>
                            <hr>*@
                        <strong>Gender</strong>
                        <p class="text-muted"> @Html.DisplayFor(model => EmployeGI.Sex) </p>
                        <hr>
                        <strong>Date Of Birth</strong>
                        <p class="text-muted"> @Html.DisplayFor(model => EmployeGI.DateOfBirth) </p>
                        <hr>
                        <strong>State Of Origin</strong>
                        <p class="text-muted"> @Html.DisplayFor(model => EmployeGI.StateOfOrigin) </p>
                        <hr>
                        <strong>LGA</strong>
                        <p class="text-muted"> @Html.DisplayFor(model => EmployeGI.LGA) </p>
                        <hr>
                        <strong>Religion</strong>
                        <p class="text-muted"> @Html.DisplayFor(model => EmployeGI.Religion) </p>
                        <hr>
                        <strong>Maiden Name</strong>
                        <p class="text-muted"> @Html.DisplayFor(model => EmployeGI.Maiden_Name) </p>
                        <hr>
                        <strong>Username</strong>
                        <p class="text-muted"> @Html.DisplayFor(model => Model.UserMaster.EmployeeCode) </p>
                        <hr>
                        <strong>Password</strong>
                        <p class="text-muted"> @Html.DisplayFor(model => Model.UserMaster.Password) </p>
                        <hr>
                        <p>@Html.ActionLink("Edit", "Edit", new { id = Model.EmployeeGIId })</p>
                    </div>
                    <!-- /.box-body -->
                </div>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="card m-b-3">
                <div class="card-body">
                    <div class="box-body">
                        @Html.Label("Country Logo", htmlAttributes: new { })<br />
                        <img src="@Model.CountryLogoIrl" id="SelectedCountryLogo" alt="Student Image" class="image" height="200px" width="200px" />
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="card m-b-3">
                <div class="card-body">
                    <div class="box-body">
                        @Html.Label("Organization Log", htmlAttributes: new { })<br />
                        <img src="@Model.OrgLogoUrl" id="SelectedOrgLogo" alt="Student Image" class="image" height="200px" width="200px" />
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
