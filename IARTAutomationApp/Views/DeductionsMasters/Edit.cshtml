@model IARTAutomationApp.Models.DeductionsMaster

@{
    ViewBag.Title = "Edit";

}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    var user = (IARTAutomationApp.Models.UserMaster)Session["User"];
    <input type="hidden" name="CustomerId" value="@user.CustomerId" />
    <!-- Main content -->
    <div class="content">

        <ol class="breadcrumb bc-colored bg-success m-b-3">
            <li class="breadcrumb-item"><a href="#">Admin-HR</a></li>
            <li class="breadcrumb-item">Payroll</li>
            <li class="breadcrumb-item active">Edit Salary Deduction</li>
        </ol>

        <div class="row">
            <div class="col-lg-12">
                <div class="card ">
                    <div class="card-header bg-blue">
                        <h5 class="text-white m-b-0">Edit Salary Deduction</h5>
                    </div>
                    <div class="card-body">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <!--Row Employee Code-->
                        <h4 class="form-heading-1">Deduction Structure</h4>
                        <div class="row">

                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.DeductionType, htmlAttributes: new { @class = "control-label" })
                                    @Html.DropDownList("DeductionType", new List<SelectListItem> {
                                        new SelectListItem { Text = "Select Deduction Type", Value = "Select Deduction Type" , Selected=true},
                                        new SelectListItem { Text = "Regular and Statutory Deductions", Value = "Regular and Statutory Deductions"},
                                        new SelectListItem { Text = "Non Regular Deductions", Value = "Non Regular Deductions"},
                                        new SelectListItem { Text = "Regular but Statutory Deductions", Value = "Regular but Statutory Deductions"},
                                        new SelectListItem { Text = "Electricity", Value = "Electricity"},
                                    }, new { @class = "form-control", maxLength = "6" })
                                    @Html.ValidationMessageFor(model => model.DeductionType, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.ValueMethod, htmlAttributes: new { @class = "control-label" })
                                    @Html.DropDownList("ValueMethod", new List<SelectListItem> {
                                        new SelectListItem  { Text = "Select Value Method", Value = "Select Value Method" , Selected=true},
                                        new SelectListItem  { Text = "Naira", Value = "Naira"},
                                        new SelectListItem { Text = "%", Value = "%"},
                                    }, new { @class = "form-control", maxLength = "6" })
                                    @Html.ValidationMessageFor(model => model.ValueMethod, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.DeductionHead, htmlAttributes: new { @class = "control-label" })
                                    @Html.DropDownList("DeductionHead", new List<SelectListItem> {
                                        new SelectListItem  { Text = "Select Deduction Head", Value = "Select Deduction Head" , Selected=true},
                                        new SelectListItem  { Text = "Tax (all Staff)", Value = "Tax (all Staff)"},
                                        new SelectListItem { Text = "NASU due", Value = "NASU due"},
                                        new SelectListItem { Text = "SSATHURAI due", Value = "SSATHURAI due"},
                                        new SelectListItem { Text = "SSANU due", Value = "SSANU due"},
                                        new SelectListItem { Text = "ASUU", Value = "ASUU"},
                                        new SelectListItem { Text = "SSATHURAI due", Value = "SSATHURAI due"},
                                        new SelectListItem { Text = "Contributory Pension", Value = "Contributory Pension"},
                                        new SelectListItem { Text = "USSA", Value = "USSA"},
                                        new SelectListItem { Text = "NILST", Value = "NILST"},
                                        new SelectListItem { Text = "Rent- Junior Staff", Value = "Rent- Junior Staff"},
                                        new SelectListItem { Text = "Rent-Senior Staff", Value = "Rent-Senior Staff"},
                                    }, new { @class = "form-control", maxLength = "6" })
                                    @Html.ValidationMessageFor(model => model.DeductionHead, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.Label("DeductionValue", "Deduction Value", htmlAttributes: new { })
                                    @Html.EditorFor(model => model.DeductionAmount, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.DeductionAmount, "", new { @class = "text-danger" })
                                </div>
                            </div>

                        </div>
                        <!--EOF Row Employee Code-->

                        <hr class="m-t-3 m-b-3">

                        <div class="row">

                            <div class="col-md-6">
                                <div class="form-group">
                                    <input type="submit" value="Update" class="btn btn-success" />
                                </div>
                            </div>

                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
}
