@model IARTAutomationApp.Models.PFAMaster

@{
    ViewBag.Title = "Create";

}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    var user = (IARTAutomationApp.Models.UserMaster)Session["User"];
    <input type="hidden" name="CustomerId" value="@user.CustomerId" />
    <div class="content">

        <ol class="breadcrumb bc-colored bg-success m-b-3">
            <li class="breadcrumb-item"><a href="#">System Configuration</a></li>
            <li class="breadcrumb-item active">Add New PFA</li>
        </ol>

        <div class="row">
            <div class="col-lg-12">
                <div class="card ">
                    <div class="card-header bg-blue">
                        <h5 class="text-white m-b-0">Add New PFA</h5>
                    </div>

                    <div class="card-body">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <!--Row PFA-->
                        <h4 class="form-heading-1">Add PFA</h4>
                        <div class="row">

                            <!--Form Field PFA-->
                            <div class="col-md-12">
                                <div class="form-group">
                                    @Html.Label("PFA Name", htmlAttributes: new { @class = "control-label" })
                                    @Html.EditorFor(model => model.PFAName, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.PFAName, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <!--EOF PFA-->

                        </div>
                        <!--EOF Row PFA-->

                        <hr class="m-t-3 m-b-3">

                        <div class="row">
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Add New" class="btn btn-success" />
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
}
