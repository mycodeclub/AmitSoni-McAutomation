@model IARTAutomationApp.Models.AllowanceMaster

@{
    ViewBag.Title = "Edit";

}

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()

    <!-- Main content -->
    <div class="content">

        <ol class="breadcrumb bc-colored bg-success m-b-3">
            <li class="breadcrumb-item"><a href="#">Admin-HR</a></li>
            <li class="breadcrumb-item">Payroll</li>
            <li class="breadcrumb-item active">Edit Salary Allowance</li>
        </ol>

        <div class="row">
            <div class="col-lg-12">
                <div class="card ">
                    <div class="card-header bg-blue">
                        <h5 class="text-white m-b-0">Edit Salary Allowance</h5>
                    </div>
                    <div class="card-body">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.AllowanceId)

                        <!--Row Employee Code-->
                        <h4 class="form-heading-1">Allowance Structure</h4>
                        <div class="row">

                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.AllowanceType, htmlAttributes: new { @class = "control-label" })
                                    @Html.EditorFor(model => model.AllowanceType, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.AllowanceType, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.ValueMethod, htmlAttributes: new { @class = "control-label" })
                                    @Html.EditorFor(model => model.ValueMethod, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.ValueMethod, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.AllowanceHead, htmlAttributes: new { @class = "control-label" })
                                    @Html.EditorFor(model => model.AllowanceHead, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.AllowanceHead, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.AllowanceAmount, htmlAttributes: new { @class = "control-label" })
                                    @Html.EditorFor(model => model.AllowanceAmount, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.AllowanceAmount, "", new { @class = "text-danger" })
                                </div>
                            </div>

                         

                        </div>
                        <!--EOF Row Employee Code-->

                        <hr class="m-t-3 m-b-3">

                        <div class="row">

                            <div class="col-md-6">
                                <div class="form-group">
                                    <input type="submit" value="Update" class="btn btn-success" />
                                </div>
                            </div>

                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
}